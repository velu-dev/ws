         <%unless @customer_vehicle.nil? %>
          $("#job_card_vehicle_model").val("<%= @customer_vehicle.model%>");
          $("#job_card_vehicle_name").val("<%= @customer_vehicle.vehicle_name%>");
          $("#job_card_vehicle_brand").val("<%= @customer_vehicle.brand%>");
          $("#job_card_vehicle_year_of_manufacture").val("<%= @customer_vehicle.year_of_manufacture%>");
