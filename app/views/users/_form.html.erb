<%= form_with(model: user, local: true, class: "form") do |form| %>
<div class="form-body">
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :user_first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :user_last_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, id: :user_username %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, id: :user_password %>
  </div>


  <div class="field">
    <%= form.label :mobile_number %>
    <%= form.text_field :mobile_number, id: :user_mobile_number %>
  </div>
 
<%= form.fields_for :address do|hh|%>
  <div class="field">
    <%= hh.label :address1 %>
    <%= hh.text_field :address1, id: :user_address1 %>
  </div>

   <div class="field">
    <%= hh.label :address2 %>
    <%= hh.text_field :address2, id: :user_address2 %>
  </div>
   <div class="field">
    <%= hh.label :city %>
    <%= hh.text_field :city, id: :user_city %>
  </div>
   <div class="field">
    <%= hh.label :state %>
    <%= hh.text_field :state, id: :user_state %>
  </div>
   <div class="field">
    <%= hh.label :country %>
    <%= hh.text_field :country, id: :user_country %>
  </div>
  <div class="field">
    <%= hh.label :pincode %>
    <%= hh.text_field :pincode, id: :user_pincode %>
  </div>
<% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
  </div>
<% end %>







