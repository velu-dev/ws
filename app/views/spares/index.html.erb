<p id="notice"><%= notice %></p>
<div class="card-header">
<h3>Spares <%= link_to 'New Spare', new_spare_path, class: "btn btn-primary pull-right"%></h3>
</div>
<div class="card-block">
<table id="spare_index" class="display nowrap table-bordered table-stripped" cellspacing="0" width="100%"> 
  <thead>
    <tr>
      <th>Spares category</th>
      <th>Part number</th>
      <th>Item name</th>
      <th>Unit</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @spares.each do |spare| %>
      <tr>
        <td><%= spare.spares_category.category_name %></td>
        <td><%= spare.part_number %></td>
        <td><%= spare.item_name %></td>
        <td><%= spare.unit.unit_name %></td>
        <td><%= spare.description %></td>
        <td><!--%= link_to '<i class="fa fa-eye"></i>'.html_safe, spare, class: "btn btn-primary btn-sm",data:{toggle: "tooltip"}, title: "View" %-->
        <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_spare_path(spare),class: "btn btn-warning btn-sm",data:{toggle: "tooltip"}, title: "Edit" %>
        <%= link_to '<i class="fa fa-trash"></i>'.html_safe,  spare, method: :delete, data: { confirm: 'Are you sure?',toggle: "tooltip"},class: "btn btn-danger btn-sm", title: "Delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>



