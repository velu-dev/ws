<p id="notice"><%= notice %></p>
<div class="card-header">
<h3>Spares Categories<%= link_to 'New Spares Category', new_spares_category_path, class:  "btn btn-primary pull-right"%></h3>
</div>
<div class="card-block">
<table id="spares_category_index" class="display nowrap table-bordered table-stripped" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Category name</th>
      <th>Category code</th>
      <th>HSNC Code</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @spares_categories.each do |spares_category| %>
      <tr>
        <td><%= spares_category.category_name %></td>
        <td><%= spares_category.category_code %></td>
        <td><%= spares_category.hsnc_code %></td>
        <td><!--%= link_to '<i class="fa fa-eye"></i>'.html_safe, spares_category,class: "btn btn-primary btn-sm",data:{toggle: "tooltip"}, title: "View" %-->
        <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_spares_category_path(spares_category),class: "btn btn-warning btn-sm",data:{toggle: "tooltip"}, title: "Edit" %>
        <%= link_to '<i class="fa fa-trash"></i>'.html_safe,  spares_category, method: :delete, data: { confirm: 'Are you sure?',toggle: "tooltip"},class: "btn btn-danger btn-sm", title: "Delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


